{
  "name": "bgipfs",
  "description": "BuidlGuidl IPFS CLI",
  "version": "0.0.5",
  "author": "azf20",
  "bin": {
    "bgipfs": "./bin/run.js"
  },
  "bugs": "https://github.com/azf20/buidlguidl-ipfs/issues",
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.1",
    "execa": "^8.0.1",
    "ipfs-uploader": "workspace:*",
    "it-all": "^3.0.6",
    "kubo-rpc-client": "^5.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/templates",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/azf20/buidlguidl-ipfs",
  "keywords": [
    "oclif",
    "ipfs",
    "cluster",
    "cli"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "bgipfs",
    "dirname": "bgipfs",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "hooks": {},
    "topics": {
      "cluster": {
        "description": "Commands for setting up and managing IPFS cluster operations"
      },
      "upload": {
        "description": "Commands for uploading files to IPFS"
      }
    }
  },
  "repository": "azf20/buidlguidl-ipfs",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "prebuild": "pnpm --filter ipfs-uploader build"
  },
  "types": "dist/index.d.ts"
}
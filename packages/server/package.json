{
  "name": "ipfs-upload-server",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "docs": "apidoc -i src/ -o docs/",
    "prebuild": "npm run clean && npm run docs"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@buidlguidl/ipfs-uploader": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "multer": "1.4.5-lts.1",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "apidoc": "^1.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "apidoc": {
    "title": "IPFS Upload API Documentation",
    "description": "API for uploading files, text, and JSON to IPFS",
    "version": "1.0.0",
    "url": "http://localhost:3001"
  }
}